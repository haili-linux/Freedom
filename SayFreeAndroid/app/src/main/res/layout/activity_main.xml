<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_weight="1.2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/cbs">

            <EditText
                android:background="@drawable/image_touming"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
                android:id="@+id/target_id"
                android:hint="输入目标id"
                android:layout_width="match_parent"
                android:maxLength="15"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/cbs">

            <EditText
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/image_touming"
                android:gravity="center|left"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
                android:id="@+id/user_id"
                android:hint="输入你的id"
                android:layout_width="match_parent"
                android:maxLength="15"
                android:layout_height="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/connect_button"
            android:text="连接"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>



    <ListView
        android:background="#F3F3F3"
        android:id="@+id/outListView"
        android:layout_weight="15"
        android:gravity="top"
        android:editable="false"
        android:textColor="#CC3300"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        tools:ignore="Deprecated" />



    <LinearLayout
        android:layout_weight="1.2"
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clipChildren="false">



        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cbr"
            android:clipChildren="false">

            <EditText
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/image_touming"
                android:id="@+id/infoTextview"
                android:hint="发送消息"
                android:textSize="17dp"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:clipChildren="false"
                android:layout_height="wrap_content"
                android:minHeight="35dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_weight="1.8"
            android:id="@+id/send_button"
            android:text="发送"
            android:layout_width="0dp"
            android:layout_height="46dp"/>

        <LinearLayout
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>