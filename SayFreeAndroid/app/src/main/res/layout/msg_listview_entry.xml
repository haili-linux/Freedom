<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/msg_Setter_textview_entry"
        android:textStyle="bold"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/msg_listview_entry_padding_left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/msg_listview_entry_msgLayout"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/msg_listview_entry_msgLayout_bg"
                    android:background="@drawable/cricle_yuanjiao_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textIsSelectable= "true"
                        android:id="@+id/msg_textview_entry"
                        android:gravity="center|left"
                        android:minHeight="30dp"
                        android:textColor="#000000"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="16dp"
                        android:text="萨达萨达萨达如果如果撒气访问公开课啊实打实撒大苏打啊实打实大苏打的给"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/msg_listview_entry_padding_right"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

</LinearLayout>